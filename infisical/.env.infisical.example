# ==========================================
# CONFIGURAÇÕES BÁSICAS
# ==========================================
HOST=0.0.0.0
PORT=8080

# ==========================================
# DOMÍNIO E SITE
# ==========================================
INFISICAL_HOST=infisical.scripthive.com.br
SITE_URL=https://infisical.scripthive.com.br

# ==========================================
# TRAEFIK
# ==========================================
TRAEFIK_CERTRESOLVER=cloudflare

# ==========================================
# DATABASE (PostgreSQL)
# ==========================================
DB_CONNECTION_URI=postgres://infisical_user:sua_senha_postgres@postgres:5432/infisical
# Ou separado:
# DB_HOST=postgres
# DB_PORT=5432
# DB_NAME=infisical
# DB_USERNAME=infisical_user
# DB_PASSWORD=sua_senha_postgres

# ==========================================
# REDIS (Recomendado para produção)
# ==========================================
REDIS_URL=redis://redis:6379
# REDIS_URL=redis://:sua_senha_redis_super_segura_aqui@redis:6379

# ==========================================
# ENCRIPTAÇÃO E SEGURANÇA
# ==========================================
# Gere com: openssl rand -hex 32
ENCRYPTION_KEY=sua_chave_de_encriptacao_aqui_32_bytes_hex
# Gere com: openssl rand -base64 32
AUTH_SECRET=seu_auth_secret_aqui_base64

# ==========================================
# JWT
# ==========================================
# Gere com: openssl rand -base64 32
JWT_AUTH_SECRET=seu_jwt_secret_aqui
JWT_REFRESH_SECRET=seu_jwt_refresh_secret_aqui
JWT_SERVICE_SECRET=seu_jwt_service_secret_aqui

# ==========================================
# EMAIL/SMTP
# ==========================================
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_FROM_ADDRESS=infisical@scripthive.com.br
SMTP_FROM_NAME=Infisical
SMTP_USERNAME=seu_usuario_smtp
SMTP_PASSWORD=sua_senha_smtp

# ==========================================
# RECURSOS OPCIONAIS
# ==========================================
# Permitir auto-cadastro de usuários
INVITE_ONLY_SIGNUP=false

# Telemetria (desabilitar se preferir)
TELEMETRY_ENABLED=false

# Modo de desenvolvimento (false em produção)
NODE_ENV=production

# ==========================================
# INTEGRAÇÕES (Opcional)
# ==========================================
# GitHub OAuth
# CLIENT_ID_GITHUB_LOGIN=
# CLIENT_SECRET_GITHUB_LOGIN=

# Google OAuth
# CLIENT_ID_GOOGLE_LOGIN=
# CLIENT_SECRET_GOOGLE_LOGIN=

# GitLab OAuth
# CLIENT_ID_GITLAB_LOGIN=
# CLIENT_SECRET_GITLAB_LOGIN=
